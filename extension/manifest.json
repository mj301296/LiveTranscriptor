{
  "manifest_version": 3,
  "name": "TwinMind Transcribe",
  "version": "1.0.0",
  "description": "Capture tab audio and transcribe in real time with a clean side panel UI.",
  "permissions": [
    "sidePanel",
    "tabCapture",
    "activeTab",
    "storage"
  ],
  "optional_permissions": [
    "microphone"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Transcription Panel"
  },
  "icons": {
    "16": "assets/icons/16.png",
    "32": "assets/icons/32.png",
    "48": "assets/icons/48.png",
    "128": "assets/icons/128.png"
  }
}
